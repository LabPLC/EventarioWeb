<%= form_tag venues_path, class: "form-inline", method: :get do %>
  <div class="input-group input-group-lg">
    <% if params[:query].present? %>
      <div class="input-group-btn">
        <%= link_to "clear", venues_path, class: "btn btn-default" %>
      </div>
    <% end %>
    <%= text_field_tag :query, params[:query], class: "form-control", id: "venue_search", autocomplete: "on" %>
    <div class="input-group-btn">
      <%= submit_tag "Search", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
<h1>Lista de  venues</h1>
<table>
  <tr>
    <th>Nombre</th>
    <th>Direccion</th>
    
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @venues.each do |venue| %>
    <tr>
      <td>
        <%= venue.nombre %>
      </td>
      <td>
        <%= venue.direccion %>
      </td>
     <!--  <td>
        <%= venue.latitud %>
      </td>
      <td>
        <%= venue.longitud %>
      </td>-->
      <td>
        <%= link_to 'Ver', venue %>
      </td><!--
     <td>
        <%= link_to 'Edit', edit_venue_path(venue) %>
      </td>
      <td>
        <%= link_to 'Destroy', venue, :method => :delete, :data => { :confirm => 'Are you sure?' } %>
      </td>-->
    </tr>
  <% end %>
</table>
